    <children>
        <ImageView fitHeight="333.0" fitWidth="540.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/4.jpg" />
            </image>
        </ImageView>
        <Label layoutX="75.0" layoutY="34.0" prefHeight="50.0" prefWidth="389.0" style="-fx-background-color: lightblue; -fx-background-radius: 10;" text="  Welcome Cashier ">
            <font>
                <Font name="Algerian" size="40.0" />
            </font>
        </Label>
        <TextField fx:id="txtUsername" layoutX="74.0" layoutY="133.0" prefHeight="34.0" prefWidth="278.0" promptText="Username">
            <font>
                <Font name="Calibri" size="17.0" />
            </font>
        </TextField>
        <Button layoutX="378.0" layoutY="188.0" mnemonicParsing="false" onAction="#cashierloginOnAction" prefHeight="31.0" prefWidth="87.0" style="-fx-background-color: lightblue;" text="login">
            <font>
                <Font name="Algerian" size="17.0" />
            </font>
        </Button>
